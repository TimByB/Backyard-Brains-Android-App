<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.backyardbrains" android:versionCode="3"
	android:versionName="0.92b">
	<uses-sdk android:minSdkVersion="8" />
	<uses-permission android:name="android.permission.RECORD_AUDIO"></uses-permission>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>

	<application android:icon="@drawable/ic_launcher_byb"
		android:label="@string/app_name" android:name=".BackyardBrainsApplication">
		<activity android:name=".BackyardAndroidActivity"
			android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".FileListActivity"></activity>
		<activity android:name=".TriggerActivity"
			android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"></activity>
		<activity android:name=".BackyardBrainsConfigurationActivity"
			android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"></activity>
		<activity android:name=".RoboroachActivity"
			android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"></activity>
		<activity android:name=".RoboroachHelpActivity"
			android:theme="@android:style/Theme.Dialog">
		</activity>
		<activity android:name=".RoboroachConfigActivity"
		    android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"></activity>
		<service android:name="com.backyardbrains.audio.AudioService"></service>
	</application>
</manifest>